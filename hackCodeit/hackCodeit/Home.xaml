<Window x:Class="hackCodeit.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home" Height="600" Width="1000">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="image/bg-black.jpg"/>
        </Grid.Background>
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Name="buttonRegister"
                
                Content="Login" HorizontalAlignment="Left" 
                Margin="104,10,0,0" VerticalAlignment="Top" Width="75" Click="buttonRegister_Click"/>
        <Button Content="Code Test" HorizontalAlignment="Left" 
        	Margin="199,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Register" HorizontalAlignment="Left" 
        	Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

        <Button Content="Code Test" HorizontalAlignment="Left" 
            	Margin="199,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
      
            <Frame  Margin="8,8,8,8" Grid.Row="1" Name="FrameNavigator" NavigationUIVisibility="Hidden"
                   HorizontalAlignment="Center"  VerticalAlignment="Center"/>
 
    </Grid>

</Window>
